<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/practice_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_occupy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_star_border_24"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/play_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/applesdgothicneo_extra_bold"
                    android:text="03월 21일 화요일 오전"/>
                <TextView
                    android:id="@+id/field_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/applesdgothicnneo_regular"
                    android:text="세종 1구장"/>

                <TextView
                    android:id="@+id/field_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/applesdgothicnneo_regular"
                    android:text="세종시 흰누리대로 23"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/play_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_whitestroke"
                        android:fontFamily="@font/applesdgothicnneo_regular"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="8sp"
                        android:paddingVertical="5sp"
                        android:textStyle="bold"
                        android:text="PLAYING"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_player_cnt"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/header_font_size"
                        android:fontFamily="@font/applesdgothicneo_bold"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/header_font_size"
                        android:fontFamily="@font/applesdgothicneo_bold"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="/4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/btn_join_practice"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_person_add_alt_1_24"
                    />
                    <ImageButton
                        android:id="@+id/btn_go_to_practice"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_search_24"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>