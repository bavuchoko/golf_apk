<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="top"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/btn_next_hole"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_weight="1"
        android:text="다음 홀"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneo_bold"
        android:textSize="@dimen/content_menu_large_size"
        android:layout_marginRight="20dp"
        android:background="#F6C83B"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/score_up"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/scoreup"
            android:layout_marginBottom="2dp"
            />
        <ImageButton
            android:id="@+id/score_down"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/score_up"
            android:background="@drawable/scoredown"
            />
        <TextView
            android:id="@+id/player_score"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:fontFamily="@font/applesdgothicneo_extra_bold"
            android:textColor="#F6C83B"
            android:clickable="false"
            android:gravity="center"
            android:text="0"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:src="@drawable/border_black"
            android:clickable="false"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_save_score"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_weight="1"
        android:text="저장"
        android:textColor="@color/white"
        android:fontFamily="@font/applesdgothicneo_bold"
        android:background="#3E33E1"
        android:textSize="@dimen/content_menu_large_size"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"/>

</LinearLayout>